{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./api",
      "typeRoots": ["./node_modules/@types", "./api/types"]
    },
    "include": [
    "api/types/express.d.ts",
    "api/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }
  